<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_16"
    >

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/commentInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flexWrap="nowrap"
        app:alignItems="stretch"
        app:alignContent="stretch"
        app:flexDirection="row"
        app:justifyContent="flex_start"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/userTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="valeriamaybe9753"
            android:maxLines="1"
            android:ellipsize="end"
            style="?attr/MovieShows.TextAppearance.Body3.Hint.Bold"
            android:layout_marginEnd="@dimen/dp_8"/>

        <TextView
            android:id="@+id/timeAgoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="11 мес. назад"
            style="?attr/MovieShows.TextAppearance.Body3.Hint.Bold"
            android:layout_marginEnd="@dimen/dp_8"/>

    </com.google.android.flexbox.FlexboxLayout>


    <TextView
        android:id="@+id/commentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/commentInfoLayout"
        style="?attr/MovieShows.TextAppearance.Body2"
        tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry.
        Lorem Ipsum has been the industry's standard dummy text ever since the 1500s,
        when an unknown printer took a galley of type and scrambled it to make a type specimen book."
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/countRepliesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@id/commentTextView"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="64 ответа"
        style="?attr/MovieShows.TextButton.Light"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>