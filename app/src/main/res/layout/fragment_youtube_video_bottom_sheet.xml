<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.screens.movie_details.YoutubeVideoBottomSheetFragment"
    android:orientation="vertical"
    android:padding="@dimen/dp_16">

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/youtubePlayerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/nameOfTrailer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Game Of Thrones - Season 1 Recap - Official HBO UK"
        style="?attr/MovieShows.TextAppearance.Headline5.Bold"
        android:layout_marginTop="@dimen/dp_16"/>

</LinearLayout>