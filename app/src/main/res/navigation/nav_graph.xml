<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/signInFragment">

    <fragment
        android:id="@+id/signInFragment"
        android:name="com.ru.movieshows.signin.presentation.signin.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" />

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.ru.movieshows.splash.presentation.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" />

    <fragment
        android:id="@+id/tabsFragment"
        android:name="com.ru.movieshows.navigation.presentation.TabsFragment"
        android:label="fragment_tabs"
        tools:layout="@layout/fragment_tabs" />

    <fragment
        android:id="@+id/moviesFragment"
        android:name="com.ru.movieshows.movies.presentation.movies.MoviesFragment"
        android:label="@string/movies"
        tools:layout="@layout/fragment_movies" />

    <fragment
        android:id="@+id/tvShowsFragment"
        android:name="com.ru.movieshows.tv_shows.presentation.tv_shows.TvShowsFragment"
        android:label="@string/tvs"
        tools:layout="@layout/fragment_tv_shows" />

    <fragment
